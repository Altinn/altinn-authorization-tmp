@namespace Styx

<div style=@Style()>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public int Columns { get; set; } = 1;
    [Parameter] public int Rows { get; set; } = 1;

    public string Style() => $"grid-column: span {Columns};grid-row: span {Rows}; ";

}
