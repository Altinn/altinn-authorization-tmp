meta {
  name: POST_Enduser_Connections_RightholderWithPackages
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/accessmanagement/api/v1/enduser/connections?party={{party}}&from={{party}}
  body: json
  auth: inherit
}

params:query {
  party: {{party}}
  from: {{party}}
}

headers {
  Accept: application/json
}

body:json {
  {
    "personidentifier": "{{toPersonId}}", // fnr or username
    "lastName": "{{toPersonLastName}}"
  }
}

script:pre-request {
  const sharedtestdata = require(`./Testdata/sharedtestdata.json`);
  const testdata = require(`./Testdata/authorizedparties/${bru.getEnvVar("tokenEnv")}.json`);
  
  bru.setVar("requestName", "POST_Enduser_Connections_RightholderWithPackages");
  
  bru.setVar("party", testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.partyUuid);
  bru.setVar("toPersonId", testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.employee_rightholderWithPackages.pid);
  bru.setVar("toPersonLastName", testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.employee_rightholderWithPackages.lastname);
  
  var getTokenParameters = {
    auth_userId: testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.dagligleder.userId,
    auth_partyId: testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.dagligleder.partyId,
    auth_partyUuid: testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.dagligleder.partyUuid,
    auth_ssn: testdata.REGN_ULASTELIG_RETTFERDIG_TIGER.dagligleder.pid,
    auth_tokenType: sharedtestdata.authTokenType.personal,
    auth_scopes: sharedtestdata.auth_scopes.portalEnduser
  };
  
  const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("bearerToken", token);
}
