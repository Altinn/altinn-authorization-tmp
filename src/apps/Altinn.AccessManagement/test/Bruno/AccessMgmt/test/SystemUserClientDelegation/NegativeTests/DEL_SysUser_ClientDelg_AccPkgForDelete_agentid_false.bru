meta {
  name: DEL_SysUser_ClientDelg_AccPkgForDelete_agentid_false
  type: http
  seq: 5
}

delete {
  url: {{baseUrl}}/accessmanagement/api/v1/internal/systemuserclientdelegation/deleteagentassignment?party={{party}}&agentId={{systemUser}}&cascade=false
  body: json
  auth: inherit
}

params:query {
  party: {{party}}
  agentId: {{systemUser}}
  cascade: false
}

headers {
  Content-Type: application/json
  Accept: application/json
}

script:pre-request {
  const sharedtestdata = require(`./Testdata/sharedtestdata.js`);
  const testdata = require(`./Testdata/systemuser-clientdelegation/${bru.getEnvVar("tokenEnv")}.js`);
  
  bru.setVar("party", testdata.revisor.partyuuid);
  bru.setVar("systemUser", testdata.revisor.systemuser.id);
  
  var getTokenParameters = {
    auth_userId: testdata.revisor.hovedadministrator.userid,
    auth_partyId: testdata.revisor.hovedadministrator.partyid,
    auth_partyUuid: testdata.revisor.hovedadministrator.partyuuid,
    auth_ssn: testdata.revisor.hovedadministrator.pid,
    auth_tokenType: sharedtestdata.authTokenType.personal,
    auth_scopes: sharedtestdata.auth_scopes.portalEnduser
  }
  
  
const testTokenGenerator = require(`./TestToolsTokenGenerator.js`);
const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("bearerToken",  token);
}

tests {
  test("Deletion of active delegation through agentId should give error with 400 response code ", function() {
    expect(res.status).to.equal(400);
    
    const data = res.getBody();
    assert.equal(data.validationErrors[0].detail, "Assignment is active in one or more delegations.");
    
  });
}
