meta {
  name: GET_Agents_Lists_For_REGN_Org
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/accessmanagement/api/v1/enduser/clientdelegations/agents?party={{party}}
  body: none
  auth: inherit
}

params:query {
  party: {{party}}
}

script:pre-request {
  const sharedtestdata = require(`./testdata/sharedtestdata.js`);
  const testdata = require(`./testdata/klient-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  
  bru.setVar("party", testdata.REGN_Organisasjon.partyUuid);
  
  var getTokenParameters = {
    auth_userId: testdata.REGN_Organisasjon.dagligleder.userId,
    auth_partyId: testdata.REGN_Organisasjon.dagligleder.partyId,
    auth_partyUuid: testdata.REGN_Organisasjon.dagligleder.partyUuid,
    auth_ssn: testdata.REGN_Organisasjon.dagligleder.pid,
    auth_tokenType: sharedtestdata.authTokenType.personal,
    auth_scopes: sharedtestdata.auth_scopes.portalEnduser
  }
  
  
  const testTokenGenerator = require(`./TestToolsTokenGenerator.js`);
  const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("bearerToken",  token);
}

tests {
  const testdata = require(`./testdata/klient-delegation/${bru.getEnvVar("tokenEnv")}.js`); 
  
  test("GET agent lists for REGN Organisasjon ", function() {
    
    const body = res.getBody();
    expect(res.status).to.equal(200);
    
   const Agent_A_PartyUuid =
    testdata.REGN_Organisasjon.REGN_Agent.userUuid;
    
  const expectedPersonIdentifier =
    testdata.REGN_Organisasjon.REGN_Agent.personidentity;
    
  const expectedRoleCode = 'agent';
  
  // find the matching client in body.data by partyUuid (client.id)
  const entry = body.data.find(item =>
    (item.agent.id || '').toLowerCase() === Agent_A_PartyUuid
  );
  
  expect(entry, 'Agent not found in response').to.exist;
  
  // Verify agent fields
  expect(entry.agent.personIdentifier).to.equal(expectedPersonIdentifier);
  
  // Verify access role code exists
  const hasRole = entry.access.some(
    a => a.role.code === expectedRoleCode
  );
  
  expect(hasRole, `Expected access role '${expectedRoleCode}' not found`).to.be.true;
    
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
