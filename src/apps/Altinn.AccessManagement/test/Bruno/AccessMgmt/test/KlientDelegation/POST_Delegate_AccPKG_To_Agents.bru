meta {
  name: POST_Delegate_AccPKG_To_Agents
  type: http
  seq: 8
}

post {
  url: {{baseUrl}}/accessmanagement/api/v1/enduser/clientdelegations/agents/accesspackages?party={{party}}&from={{fromOrg}}&to={{to}}
  body: json
  auth: inherit
}

params:query {
  party: {{party}}
  from: {{fromOrg}}
  to: {{to}}
}

body:json {
  {
    "values": [
     {
       "role": "rettighetshaver",
       "packages" : [
         "urn:altinn:accesspackage:skattegrunnlag"
       ]
     }
    ]
  }
}

script:pre-request {
  const sharedtestdata = require(`./testdata/sharedtestdata.js`);
  const testdata = require(`./testdata/klient-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  const testdata2 = require(`./testdata/enduser/${bru.getEnvVar("tokenEnv")}.js`);
  
  bru.setVar("party", testdata2.org2_delegates_tilgangspakke.partyuuid);
  bru.setVar("fromOrg", testdata2.org1_delegates_tilgangspakke.partyuuid);
  bru.setVar("to", testdata.REGN_Organisasjon.REGN_Agent.userUuid);
  
  
  var getTokenParameters = {
    auth_userId: testdata2.org2_delegates_tilgangspakke.innehaver.userid,
    auth_partyId: testdata2.org2_delegates_tilgangspakke.innehaver.partyid,
    auth_partyUuid: testdata2.org2_delegates_tilgangspakke.innehaver.partyuuid,
    auth_ssn: testdata2.org2_delegates_tilgangspakke.innehaver.pid,
    auth_tokenType: sharedtestdata.authTokenType.personal,
    auth_scopes: sharedtestdata.auth_scopes.portalEnduser
  }
  
  
  const testTokenGenerator = require(`./TestToolsTokenGenerator.js`);
  const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("bearerToken",  token);
}

tests {
  const testdata = require(`./testdata/klient-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  const testdata2 = require(`./testdata/enduser/${bru.getEnvVar("tokenEnv")}.js`);
  
  test("Delegate access pacakage to added agent in client delegation", function() {
    
    const body = res.getBody();
    const data = typeof body === "string" ? JSON.parse(body) : body;
  
    expect(data).to.be.an("array");
    expect(data.length).to.be.greaterThan(0);
  
    const item = data[0];
  
    expect(item).to.have.property("fromId");
    expect(item).to.have.property("toId");
  
    expect(item.fromId.toLowerCase()).to.equal(
      testdata2.org1_delegates_tilgangspakke.partyuuid.toLowerCase()
    );
  
    expect(item.toId.toLowerCase()).to.equal(
      testdata.REGN_Organisasjon.REGN_Agent.userUuid.toLowerCase()
    );
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
