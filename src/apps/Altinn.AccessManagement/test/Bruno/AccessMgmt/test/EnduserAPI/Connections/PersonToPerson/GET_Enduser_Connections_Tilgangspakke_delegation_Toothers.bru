meta {
  name: GET_Enduser_Connections_Tilgangspakke_delegation_Toothers
  type: http
  seq: 5
}

get {
  url: {{baseUrl}}/accessmanagement/api/v1/enduser/connections/accesspackages?from={{party}}&to={{toPerson}}&party={{party}}&package={{package}}
  body: json
  auth: inherit
}

params:query {
  from: {{party}}
  to: {{toPerson}}
  party: {{party}}
  package: {{package}}
}

body:json {
   
}

script:pre-request {
  const sharedtestdata = require(`./testdata/sharedtestdata.js`);
  const testdata = require(`./testdata/person-accesspackage-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  
  bru.setVar("party", testdata.privat_person_A.partyuuid);
  bru.setVar("toPerson", testdata.privat_person_B.partyuuid);
  bru.setVar("package", testdata.package_to_delegate.innbygger_pacakage_urn);
  
  
  var getTokenParameters = {
    auth_userId: testdata.privat_person_A.userid,
    auth_partyId: testdata.privat_person_A.partyid,
    auth_partyUuid: testdata.privat_person_A.partyuuid,
    auth_ssn: testdata.privat_person_A.pid,
    auth_tokenType: sharedtestdata.authTokenType.personal,
    auth_scopes: sharedtestdata.auth_scopes.portalEnduser
  }
  
  
  const testTokenGenerator = require(`./TestToolsTokenGenerator.js`);
  const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("bearerToken",  token);
}

tests {
  const testdata = require(`./testdata/person-accesspackage-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  
  test("GET delegated person in rettighetshaver list after delegating pacakage", function() {
  
     const data = typeof res.getBody() === "string" ? JSON.parse(res.getBody()
      ): res.getBody();
  
    const item = data.data[0];
    const perm = item.permissions[0];
  
    expect(perm.from.id).to.equal(testdata.privat_person_A.partyuuid);
    expect(perm.to.id).to.equal(testdata.privat_person_B.partyuuid);
    expect(perm.role.code).to.equal("rettighetshaver");
  
    expect(item.package.urn).to.equal(
      "urn:altinn:accesspackage:innbygger-straffesak"
    );
  });
}

