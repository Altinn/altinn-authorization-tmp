get {
  url: {{baseUrl}}/accessmanagement/api/v1/enduser/connections?party={{party}}&from={{party}}&to={{toPerson}}
  body: json
  auth: inherit
}

params:query {
  party: {{party}}
  from: {{party}}
  to: {{toPerson}}
}

body:json {
   
}

script:pre-request {
  const sharedtestdata = require(`./testdata/sharedtestdata.js`);
  const testdata = require(`./testdata/person-accesspackage-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  
  bru.setVar("party", testdata.privat_person_A.partyuuid);
  bru.setVar("toPerson", testdata.privat_person_B.partyuuid);
  
  
  var getTokenParameters = {
    auth_userId: testdata.privat_person_A.userid,
    auth_partyId: testdata.privat_person_A.partyid,
    auth_partyUuid: testdata.privat_person_A.partyuuid,
    auth_ssn: testdata.privat_person_A.pid,
    auth_tokenType: sharedtestdata.authTokenType.personal,
    auth_scopes: sharedtestdata.auth_scopes.portalEnduser
  }
  
  
  const testTokenGenerator = require(`./TestToolsTokenGenerator.js`);
  const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("bearerToken",  token);
}

tests {
  const testdata = require(`./testdata/person-accesspackage-delegation/${bru.getEnvVar("tokenEnv")}.js`);
  test("GET added person as rettighetshaver toOthers", function() {
  
     const data = res.getBody();
    
    const role = data.data.find(item => item.roles[0].code === "rettighetshaver");
    expect(role).to.exist;
    
    expect(role.party.id).to.equal(testdata.privat_person_B.partyuuid.toLowerCase());
  });
}

