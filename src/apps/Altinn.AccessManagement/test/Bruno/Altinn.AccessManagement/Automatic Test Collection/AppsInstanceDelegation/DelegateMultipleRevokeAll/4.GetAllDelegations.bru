meta {
  name: 4.GetAllDelegations
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/accessmanagement/api/v1/app/delegations/resource/{{resourceId}}/instance/{{revokeAllinstanceId}}
  body: none
  auth: none
}

headers {
  PlatformAccessToken: {{platformAccessToken}}
}

body:json {
  {
    "from": {
      "type": "urn:altinn:party:uuid",
      "value": "{{fromUuid}}"
    },
    "to": {
      "type": "urn:altinn:party:uuid",
      "value": "{{toUuid}}"
    },
    "rights": [
      {
        "resource": [
          {
            "type": "urn:altinn:resource",
            "value": "{{resourceId}}"
          },
          {
            "type": "urn:altinn:task",
            "value": "task_1"
          }
        ],
        "action": {
          "type": "urn:oasis:names:tc:xacml:1.0:action:action-id",
          "value": "read"
        }
      },
      {
        "resource": [
          {
            "type": "urn:altinn:resource",
            "value": "{{resourceId}}"
          },
          {
            "type": "urn:altinn:task",
            "value": "task_1"
          }
        ],
        "action": {
          "type": "urn:oasis:names:tc:xacml:1.0:action:action-id",
          "value": "sign"
        }
      }
    ]
  }
}

script:pre-request {
  const sharedtestdata = require(`./Testdata/sharedtestdata.json`);
  const testdata = require(`./Testdata/instance-delegation/${bru.getEnvVar("tokenEnv")}.json`);
  const resource = "app_" + sharedtestdata.serviceOwners.ttd.org + "_" + testdata.app;
  
  bru.setVar("resourceId", resource);
  bru.setVar("revokeAllinstanceId", testdata.revokeallinstanceid);
  bru.setVar("fromUuid", testdata.org1.partyuuid);
  bru.setVar("toUuid", testdata.org3.partyuuid);
  
  var getTokenParameters = {
      auth_org: sharedtestdata.serviceOwners.ttd.org,
      auth_app: testdata.app,
      auth_tokenType: sharedtestdata.authTokenType.platformAccess
    };
  
  const token = await testTokenGenerator.getToken(getTokenParameters);
  bru.setVar("platformAccessToken",  token);
}

tests {
  test("post InstanceDelegation ReadSign", function() {
      const sharedtestdata = require(`./Testdata/sharedtestdata.json`);
      const testdata = require(`./Testdata/instance-delegation/${bru.getEnvVar("tokenEnv")}.json`);
      const resource = "app_" + sharedtestdata.serviceOwners.ttd.org + "_" + testdata.app;
    
      const data = res.getBody();
      expect(res.status).to.equal(200);
    
      expect(data.data[0].resourceId).to.equal(resource);
      expect(data.data[0].instanceId).to.equal(testdata.revokeallinstanceid);
  
      expect(data.data[0].from.value).to.equal(testdata.org1.partyuuid);
      expect(data.data[0].to.value).to.equal(testdata.person1.partyuuid);
    
      expect(data.data[0].rights[0].status).to.equal('Delegated');
      expect(data.data[0].rights[0].action.value).to.equal('read');  
      expect(data.data[0].rights[0].resource[0].value).to.equal(resource);
      expect(data.data[0].rights[0].resource[1].value).to.equal('task_1');
      
      expect(data.data[0].rights[1].status).to.equal('Delegated');
      expect(data.data[0].rights[1].action.value).to.equal('sign');  
      expect(data.data[0].rights[1].resource[0].value).to.equal(resource);
      expect(data.data[0].rights[1].resource[1].value).to.equal('task_1');
    
      expect(data.data[1].resourceId).to.equal(resource);
      expect(data.data[1].instanceId).to.equal(testdata.revokeallinstanceid);
  
      expect(data.data[1].from.value).to.equal(testdata.org1.partyuuid);
      expect(data.data[1].to.value).to.equal(testdata.person3.partyuuid);
    
      expect(data.data[1].rights[0].status).to.equal('Delegated');
      expect(data.data[1].rights[0].action.value).to.equal('read');  
      expect(data.data[1].rights[0].resource[0].value).to.equal(resource);
      expect(data.data[1].rights[0].resource[1].value).to.equal('task_1');
      
      expect(data.data[1].rights[1].status).to.equal('Delegated');
      expect(data.data[1].rights[1].action.value).to.equal('sign');  
      expect(data.data[1].rights[1].resource[0].value).to.equal(resource);
      expect(data.data[1].rights[1].resource[1].value).to.equal('task_1');
    
      expect(data.data[2].resourceId).to.equal(resource);
      expect(data.data[2].instanceId).to.equal(testdata.revokeallinstanceid);
  
      expect(data.data[2].from.value).to.equal(testdata.org1.partyuuid);
      expect(data.data[2].to.value).to.equal(testdata.org3.partyuuid);
    
      expect(data.data[2].rights[0].status).to.equal('Delegated');
      expect(data.data[2].rights[0].action.value).to.equal('read');  
      expect(data.data[2].rights[0].resource[0].value).to.equal(resource);
      expect(data.data[0].rights[0].resource[1].value).to.equal('task_1');
      
      expect(data.data[2].rights[1].status).to.equal('Delegated');
      expect(data.data[2].rights[1].action.value).to.equal('sign');  
      expect(data.data[2].rights[1].resource[0].value).to.equal(resource);
      expect(data.data[2].rights[1].resource[1].value).to.equal('task_1');
    
    
    });
}
